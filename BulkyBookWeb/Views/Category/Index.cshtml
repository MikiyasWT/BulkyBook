@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categoy list</h2>
        </div>
        <div class="col-6 text-end">
         <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
             <i class="bi bi-plus-circle"> &nbsp Create New Category</i>
         </a>
        </div>
    </div>

    <br/> <br/>

    <form class="d-flex" method="GET"  asp-action="Search">
        <input class="form-control me-sm-2" type="text"  placeholder="Search" required>
        <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
      </form>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>display order</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
        @foreach(var obj in Model){
        <tr>
            <td width=50%>@obj.Name</td>
            <td width=30%>@obj.DisplayOrder</td>
            
            <td width=50%>
                <div class="btn-group w-75" role="group">
                    <a class="btn btn-primary mx-2" asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    <a class="btn btn-danger mx-2" asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"><i class="bi bi-trash3"></i>Delete</a>
                    <a asp-action="Details" asp-route-id="@obj.Id">Details</a>
                </div>  
                
            </td>

               
        </tr>
        }
    
</table>
</div>